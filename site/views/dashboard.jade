extends template

block content
	h2.text-center Create your flatpage
	br

	div.container
		div.row
			div.col-xs-9.col-xs-offset-1
				div.account-wall
					form(class='form-horizontal', action='/store_page', method='POST')
						div(class='form-group')
							label(class='col-xs-3 control-label') Authors
							div(class='col-xs-8')
								input(class='form-control', type='text', name='authors', required, autofocus, value='author1,author2')

						br
						div(class='form-group')
							label(class='col-xs-3 control-label') Main Images
							div(class='col-xs-8')
								input(class='form-control', type='text', name='mainImages', autofocus, value='img1,img2,img3')
						br
						div(class='form-group')
							label(class='col-xs-3 control-label') Side Images
							div(class='col-xs-8')
								input(class='form-control', type='text', name='sideImages', autofocus, value='side_img1,side_img2,side_img3')
						br
						div(class='form-group')
							label(class='col-xs-3 control-label') Title
							div(class='col-xs-8')
								input(class='form-control', type='text', name='title', required, value='title')

						br
						div(class='form-group')
							label(class='col-xs-3 control-label') Cover photo
							div(class='col-xs-8')
								input(class='form-control', type='text', name='cover', required, value='cover')

						div(class='form-group')
							label(class='col-xs-3 control-label') Cover photo credit
							div(class='col-xs-8')
								input(class='form-control', type='text', name='coverCaption', required, value='caption')

						div(class='form-group')
							label(class='col-xs-3 control-label') Subheading
							div(class='col-xs-8')
								input(class='form-control', type='text', name='subheading', required, value='subhead')

						div(class='form-group')
							label(class='col-xs-3 control-label') Main Image Credits
							div(class='col-xs-8')
								input(class='form-control', type='text', name='mainImageCaptions', required, value='caption1,caption2,caption3')
						
						br
						div(class='form-group')
							label(class='col-xs-3 control-label') Side Image Captions
							div(class='col-xs-8')
								input(class='form-control', type='text', name='sideImageCaptions', required, value='caption1,caption2,caption3')
						br

						div(class='form-group')
							label(class='col-xs-3 control-label') Quotes
							div(class='col-xs-8')
								input(class='form-control', type='text', name='quotes', value='quote1,quote2,quote3')
						
						br
		

						div(class='form-group')
							label(class='col-xs-3 control-label') Quote Attribute
							div(class='col-xs-8')
								input(class='form-control', type='text', name='quoteMakers', value='quoter1,quoter2,quoter3')
						br

						div(class='form-group')
							label(class='col-xs-3 control-label') Paragraphs
							div(class='col-xs-8')
								textarea(name='paragraphs', cols='90', rows='8')
						br
						button(class='btn btn-lg btn-primary btn-block', type='submit') Generate Flatpage
							span.clearfix
	script(src="../assets/js/dashboard.js")